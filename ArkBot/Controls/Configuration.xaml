        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <xctk:PropertyGrid x:Name="ConfigurationPropertyGrid" Grid.Row="0" SelectedObject="{Binding Config}" ShowDescriptionByTooltip="True" ShowTitle="False" ShowSearchBox="False" ShowSortOptions="False">
